nalu_build_dir=~/nalu2/install
trilinos_install_dir=$nalu_build_dir/trilinos
yaml_install_dir=$nalu_build_dir

EXTRA_ARGS=$@

# Cleanup old cache before we configure
# Note:  This does not remove files produced by make.  Use "make clean" for this.
find . -name "CMakeFiles" -exec rm -rf {} \;
rm -f CMakeCache.txt

cmake \
  -DTrilinos_DIR:PATH=$trilinos_install_dir \
  -DYAML_DIR:PATH=$yaml_install_dir \
  -DENABLE_INSTALL:BOOL=OFF \
  -DCMAKE_BUILD_TYPE=RELEASE \
  -DFAST_DIR:PATH=~/nalu2/packages/fastv8DriverProgram/fastv8 \
  -DFAST_LIBRARY:PATH=FAST_glin64 \
  -DFAST_CINTERFACE_LIBRARY:PATH=FAST_cInterface_glin64 \
  -DFAST_YAML_LIBRARY:PATH=yaml-cpp11 \
$EXTRA_ARGS \
../
